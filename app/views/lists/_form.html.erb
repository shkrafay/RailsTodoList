<%= form_for @list do |form| %>
	<div class="row">
		<div class="form-group col-8">
			<label for="name"><%= form.label :name %> of to-do-list</label>
			<%= form.text_field :name,  :class => "form-control" %> 
			<small id="name" class="form-text text-muted">Required, at least 5 characters.</small>
		</div>
		<div class="form-group col-4">
			<label for="date"><%= form.label :date %></label> <br>
			<%= form.date_field :date %>
		</div>
	</div>

	<p>
		<%= form.submit class: "btn btn-success btn-sm" %>
	</p>

	<% end %>